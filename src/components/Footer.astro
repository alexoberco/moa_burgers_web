<style>
    footer {
        background-color: var(--hex-brand);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding: 4rem 2rem 2rem;
        color: rgba(255, 255, 255, 0.8);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 3rem;
    }

    h3 {
        color: white;
        margin-top: 0;
    }

    .links {
        display: flex;
        gap: 2rem;
    }

    a {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        transition: color 0.2s;
    }

    a:hover {
        color: var(--hex-secondary);
    }

    .disclaimer {
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        font-size: 0.8rem;
        text-align: center;
        opacity: 0.8;
    }

    @media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            gap: 2rem;
        }

        .links {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>
